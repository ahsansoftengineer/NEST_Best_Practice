{
  "name": "nest_best_practice",
  "version": "0.0.1",
  "description": "Learn Node JS Best Practices",
  "author": "Muhammad Ahsan AAM",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start && npm run copy:assets",
    "comment-start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "MY SETTINGS": "BELOW CODE IS MY OWN SETTINGS",
    "test:e2e": "dotenv -e .env.test -- jest -i --no-cache -c ./test/jest-e2e.json",
    "test": "dotenv -e .env.test -- jest -i --no-cache -c jest.config.json",
    "copy:assets": "cpx 'src/assets/**' 'dist/assets'",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f src/core/config/ConfigTypeOrmMigration.ts",
    "migration:generate": "npm run build && npm run typeorm migration:generate UserMigration",
    "migration:create": "npm run typeorm:cli -- migration:create -d src/core/db/migrations -n",
    "migration:run": "npm run typeorm:cli -- migration:run",
    "migration:revert": "npm run typeorm:cli -- migration:revert",
    "migration:up": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run -d src/modules/config/ormconfig.ts",
    "migration:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert -d src/modules/config/ormconfig.ts"
  },
  "dependencies": {
    "@anchan828/nest-sendgrid": "^0.6.3",
    "@casl/ability": "^5.4.4",
    "@nestjs-modules/mailer": "^1.3.17",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/typeorm": "^8.1.4",
    "@sendgrid/mail": "^7.7.0",
    "argon2": "^0.28.7",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "dotenv-parse": "^1.0.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
