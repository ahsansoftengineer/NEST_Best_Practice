{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {    
    "assets": [
      {
        "include": "../public",
        "outDir": "dist/public",
        "watchAssets": true
      },
      {
        "include": "./views",
        "outDir": "dist/views",
        "watchAssets": true
      },
      {
        "include": "./config/*.yaml", 
        "outDir": "./dist/",
        "watchAssets": true
      },
      {
        "include": "./config/*.env", 
        "outDir": "./dist/",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
